@page
@model GimnasioFacil.App.Presentacion.ListasModel
@{
    ViewData["Title"]="Nutricion";
}


<br>
<a asp-page="/ListaNutricion/FormularioN" style="width:200px;height:40px" class="btn btn-success form-control">Crear Nutricion</a>
<br><br><h2 class="text-info" style="text-align:center;">Lista Nutricion</h2>

<div class="border">
    <table class="table">
        <tr>
            <td>NOMBRE</td>
            <td>DESCRIPCION</td>
        </tr>
        <tr><td></td></tr>
        @foreach(var n in Model.listaNutricion)
        {
            <tr>
                <td>@n.NombreNutricion</td>
                <td>@n.Descripcion</td>
                 <td>
                   <a type="button" asp-page="/ListaNutricion/EditarN" class="btn btn-secondary" asp-route-nutricionId=@n.Id>Editar</a>
                </td>
                <td>
                   <a type="button"  class="btn btn-danger" asp-route-nutricionId=@n.Id >Eliminar</a>
                </td>
            </tr>
            
        }

    </table>

</div>